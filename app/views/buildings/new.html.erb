<%- if @building.errors.size > 0 -%>
  <ul class="errors">
    <%- @building.errors.full_messages.each do |message| -%>
    <li><strong><%= message %></strong></li>
    <%- end -%>
  </ul>
<%- end -%>

<h2>Add a Building</h2>

<%= form_for @building do |f| %>
  <div>
    <%= f.label :street_address, 'Street Address' %>
    <%= f.text_field :street_address %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.select :state, Building.states, include_blank: true %>
  </div>
  <div>
    <%= f.label :postal_code, 'Postal Code' %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: "25x3" %>
  </div>
  <div>
    <%= f.label :owner_id, "Owner ID" %>
    <%= f.text_field :owner_id %>
  </div>
  <div>
    <%= f.submit 'Add Building' %>
  </div>

<%- end -%>